<hr>
<%= form_for @event, :html => {:class => "form-horizontal form-label-left"} do |f| %>
  <%= render "shared/errors", object: @event %>
  <div class="form-group">
    <%= f.label :nama_event, "Title Event :", class: "control-label col-md-3 col-sm-3 col-xs-12" %>
      <div class="col-md-6 col-sm-6 col-xs-12">
        <%= f.text_field :nama_event, { autofocus: :true, class: "form-control select2"} %>
      </div>
  </div>
  <div class="ln_solid"></div>

  <div class="form-group">
    <%= f.label :deskripsi, "Deksripsi :", class: "control-label col-md-3 col-sm-3 col-xs-12" %>
      <div class="col-md-6 col-sm-6 col-xs-12">
        <%= f.text_area :deskripsi, {class: "form-control", rows: "3", placeholder:"Deskripsi event..."} %>
      </div>
  </div>
  <div class="ln_solid"></div>

  <div class="form-group">
    <%= f.label :is_open, "Buka Pendaftaran :", class: "control-label col-md-3 col-sm-3 col-xs-12" %>
      <div class="col-md-6 col-sm-6 col-xs-12">
        <%= f.check_box :is_open, {} %> Ya
      </div>
  </div>

  <div class="ln_solid"></div>
  <div class="form-group">
    <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
      <%= link_to 'Kembali', @url, class: 'btn btn-danger' %>
      <%= f.submit "Simpan", class: "btn btn-primary pull-right" %>
    </div>
  </div>
<% end %>
