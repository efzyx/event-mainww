<% @url = event_team_points_path(@event, @team) %>
<% @aksi = "Tambah" %>
<% @objek = @team.title + "'s Point" %>

<% if flash[:notice] %>
<div class="callout callout-info">
  <p><%= flash[:notice] %></p>
</div>
<% end %>

<% if flash[:warning] %>
<div class="callout callout-danger">
  <p><%= flash[:warning] %></p>
</div>
<% end %>

<div class="row">
  <div class="col-xs-12">
    <%= link_to 'Tambah Point', event_team_points_path(@event, @team), class: 'btn btn-primary pull-right' %><hr>
    <div class="box">
      <div class="box-body table-responsive no-padding">
        <table class="table table-hover">
          <thead>
            <tr>
              <td>#</td>
              <td>Nilai</td>
              <td>Keterangan</td>
              <td>Ditambahkan Oleh</td>
            </tr>
          </thead>
          <tbody>

            <% nomor = 1 %>
            <% jumlah = 0 %>
            <% @point.each do |p| %>
            <tr>
              <td><%= nomor %></td>
              <td><%= p.nilai %></td>
              <td><%= p.keterangan %></td>
              <td><%= p.oleh %></td>
            </tr>
            <% nomor+=1 %>
            <% jumlah+=p.nilai %>
            <% end %>
          </tbody>
          <tfoot>
            <tr>
              <td>Jumlah</td>
              <td colspan="3"><%= jumlah %></td>
            </tr>
          </tfoot>
        </table>
        </div>
      </div>
    </div>
  </div>
