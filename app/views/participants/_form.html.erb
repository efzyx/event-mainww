<hr>
<%= form_for [@event, @participant], :html => {:class => "form-horizontal form-label-left"} do |f| %>
  <%= render "shared/errors", object: @participant %>
  <div class="form-group">
    <%= f.label :display_name, "Display Name :", class: "control-label col-md-3 col-sm-3 col-xs-12" %>
      <div class="col-md-6 col-sm-6 col-xs-12">
        <%= f.text_field :display_name, { autofocus: :true, class: "form-control select2"} %>
      </div>
  </div>
  <div class="ln_solid"></div>

  <div class="form-group">
    <%= f.label :tele_username, "Telegram Username :", class: "control-label col-md-3 col-sm-3 col-xs-12" %>
      <div class="col-md-6 col-sm-6 col-xs-12">
        <%= f.text_field :tele_username, {class: "form-control", rows: "3", placeholder:"Contoh : @efzet, @bagus , dll"} %>
      </div>
  </div>
  <div class="ln_solid"></div>
  <%= f.hidden_field(:event_id, :value => @event.id) %>
  <%= f.hidden_field(:team_id, :value => nil) %>
  <div class="ln_solid"></div>
  <div class="form-group">
    <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
      <%= link_to 'Kembali', @url, class: 'btn btn-danger' %>
      <%= f.submit "Simpan", class: "btn btn-primary pull-right" %>
    </div>
  </div>
<% end %>
