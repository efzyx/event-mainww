<% @url = '' %>
<% @aksi = "List" %>
<% @objek = "Peserta" %>

<% if flash[:notice] %>
<div class="callout callout-info">
  <p><%= flash[:notice] %></p>
</div>
<% end %>

<% if flash[:warning] %>
<div class="callout callout-danger">
  <p><%= flash[:warning] %></p>
</div>
<% end %>

<div class="row">
  <div class="col-xs-12">
    <%= link_to 'Kembali', event_path(@event), class: 'btn btn-danger pull-left' %>
    <%= link_to 'Gabung Event', new_event_participant_path(@event), class: 'btn btn-primary pull-right' %> <hr>
    <div class="box">
      <div class="box-body table-responsive no-padding">
        <table class="table table-hover">
          <thead>
            <tr>
              <td>#</td>
              <td>Display Name</td>
              <td>Telegram Username</td>
              <td>Aksi</td>
            </tr>
          </thead>
          <tbody>
            <% nomor = 1 %>
            <% @participant.each do |p| %>
            <tr>
              <td><%= nomor %></td>
              <td><%= p.display_name %></td>
              <td><%= p.tele_username %></td>
              <td>
                <%= link_to 'Delete', '', class: 'btn btn-danger' %>
                </td>
            </tr>
            <% nomor+=1 %>
            <% end %>
          </tbody>
        </table>
        </div>
      </div>
    </div>
  </div>
