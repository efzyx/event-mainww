<% if flash[:notice] %>
<div class="callout callout-info">
  <p><%= flash[:notice] %></p>
</div>
<% end %>

<% @url = event_participants_url(@event) %>
<% @aksi = "List" %>
<% @objek = "Tim" %>

<% if flash[:warning] %>
<div class="callout callout-danger">
  <p><%= flash[:warning] %></p>
</div>
<% end %>

<div class="row">
  <div class="col-xs-12">
    <%= link_to 'Kembali', event_path(@event), class: 'btn btn-danger pull-left' %><hr>
    <div class="box">
      <div class="box-body table-responsive no-padding">
        <table class="table table-hover">
          <thead>
            <tr>
              <td>Peringkat</td>
              <td>Nama Tim</td>
              <td>Anggota</td>
              <td>Point</td>
              <td>Aksi</td>
            </tr>
          </thead>
          <tbody>

            <% nomor = 1 %>
            <% @peserta.each do |t| %>
            <tr>
              <td><%= nomor %></td>
              <td><%= t[0].title %></td>
              <td>
               
                <% no = 1 %>
                <% @participant.where(team_id: t[0].id).each do |p| %>
                <%=no %><%=". "%><%= p.display_name %> <br>
                <% no += 1 %>
                <% end %> </td>
              <td>
                
                <%= t[1] %><br>
                
              </td>
              <td><%= link_to 'Input', new_event_team_point_path(@event, t), class: 'btn btn-primary' %></td>
            </tr>
            <% nomor+=1 %>
            <% end %>
          </tbody>
        </table>
        </div>
      </div>
    </div>
  </div>
