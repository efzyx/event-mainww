<% if flash[:notice] %>
<div class="callout callout-info">
  <p><%= flash[:notice] %></p>
</div>
<% end %>

<% @url = event_participants_url(@event) %>
<% @aksi = "List" %>
<% @objek = "Tim" %>

<% if flash[:warning] %>
<div class="callout callout-danger">
  <p><%= flash[:warning] %></p>
</div>
<% end %>

<div class="row">
  <div class="col-xs-12">
    <%= link_to 'Tambah Tim', new_event_team_path(@event), class: 'btn btn-primary pull-right' %><hr>
    <div class="box">
      <div class="box-body table-responsive no-padding">
        <table class="table table-hover">
          <thead>
            <tr>
              <td>#</td>
              <td>Nama Tim</td>
              <td>Anggota</td>
              <td>Point</td>
              <td>Keterangan</td>
            </tr>
          </thead>
          <tbody>

            <% nomor = 1 %>
            <% @team.each do |t| %>
            <tr>
              <td><%= nomor %></td>
              <td><%= t.title %></td>
              <td>
               
                <% no = 1 %>
                <% @participant.where(team_id: t.id).each do |p| %>
                <%=no %><%=". "%><%= p.tele_username %> <br>
                <% no += 1 %>
                <% end %>
                 <%= link_to 'Tambah', event_team_participant_teams_new_path(@event, t), class: 'btn btn-primary' %>
              </td>
              <td>
                
                <%= Point.where(team_id: t).sum(:nilai) %><br>
                <%= link_to 'Riwayat', event_team_points_path(@event, t), class: 'btn btn-primary' %>
                
              </td>
              <td><%= t.deskripsi %></td>
            </tr>
            <% nomor+=1 %>
            <% end %>
          </tbody>
        </table>
        </div>
      </div>
    </div>
  </div>
