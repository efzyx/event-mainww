<hr>
<%= form_for [@event, @team], :html => {:class => "form-horizontal form-label-left"} do |f| %>
  <%= render "shared/errors", object: @team %>
  <div class="form-group">
    <%= f.label :title, "Nama Tim :", class: "control-label col-md-3 col-sm-3 col-xs-12" %>
      <div class="col-md-6 col-sm-6 col-xs-12">
        <%= f.text_field :title, { autofocus: :true, class: "form-control select2"} %>
      </div>
  </div>
  <div class="ln_solid"></div>
  <%= f.hidden_field(:event_id, :value => @event.id) %>
  <div class="form-group">
    <%= f.label :deskripsi, "Deskripsi Tim :", class: "control-label col-md-3 col-sm-3 col-xs-12" %>
      <div class="col-md-6 col-sm-6 col-xs-12">
        <%= f.text_area :deskripsi, {class: "form-control", rows: "3", placeholder:"Deskripsi tim..."} %>
      </div>
  </div>
  <div class="ln_solid"></div>

  <div class="ln_solid"></div>
  <div class="form-group">
    <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
      <%= link_to 'Kembali', @url, class: 'btn btn-danger' %>
      <%= f.submit "Simpan", class: "btn btn-primary pull-right" %>
    </div>
  </div>
<% end %>
